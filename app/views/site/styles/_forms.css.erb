/* ##############################################################
  
   forms.css
   * Sets up some default styling for forms
   * Gives you classes to enhance your forms
   
   Usage:
   * For text fields, use class .title or .text
   
   Originally based on blueprint-css v0.7.1
   
############################################################## */

fieldset .trap { display: none }

label       { font-weight: bold; }
fieldset    { padding:1.4em; margin: 0 0 1.5em 0; border: 1px solid #ccc; }
legend      { font-weight: bold; font-size:1.2em; }


/* @group Autocomplete
-------------------------------------------------------------- */
ul.jq-ui-autocomplete {
    position: absolute;
    overflow: hidden;
    background-color: #fff;
    border: 1px solid #aaa;
    margin: 0px;
    padding: 0;
    list-style: none;
    color: #333;
}
ul.jq-ui-autocomplete li { 
  display: block; 
  padding: .3em .5em .3em .3em; 
  overflow: hidden;
  width: 100%;
}

ul.jq-ui-autocomplete li.active { 
  background-color: <%= @colors[:light_green] %>; 
  color: <%= @colors[:dark_grey] %>;;
}

/* @end */

/* @group Form fields
-------------------------------------------------------------- */

<% input_width = 390 %>

input.text, input.title,
textarea, select {
  margin:0.5em 0;
  border:1px solid #bbb;
}

input.text:focus, input.title:focus,
textarea:focus, select:focus {
  border:1px solid #666;
}

input.text, 
input.title   { width: 300px; padding:5px; }
input.title   { font-size:1.5em; }
textarea      { width: <%= input_width %>px; height: 250px; padding:5px; }

form.standard_form div.help {
  margin: 0;
  padding: 0.25em 0 0 8em;
}

form.standard_form span.help {
  margin: 0;
  padding: 0 0 0 1em;
}

form.standard_form textarea {
  margin: 0px ;
}

form.standard_form input[type="text"] {
  width: <%= input_width %>px;
}

form.standard_form #date_start,
form.standard_form #time_start,
form.standard_form #date_end,
form.standard_form #time_end
{
  width: <%= (input_width/2)-14 %>px;
}

div.time-picker li {
  white-space: nowrap;
}

/* @end */ 

/* @group Success, notice and error boxes
-------------------------------------------------------------- */

.flash      { padding: .8em; margin: 1em 250px 1em 0 ;  }

.error, .failure      { background: <%= @colors[:dark_grey] %>; color: <%= @colors[:creme] %>; }
.notice     { background: <%= @colors[:light_green] %>; }
.success    { background: <%= @colors[:cyan] %>; color: <%= @colors[:dark_grey] %>;  }
.error a    { color: #8a1f11; }
.notice a   { color: #514721; }
.success a  { color: #264409; }

.flash.flash_failure {
  color: red;
  border: 2px solid red;
  background: #F5DBD7;
}
/* @end */ 
