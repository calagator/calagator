<h1>Editing source</h1>

<%= semantic_form_for(@source) do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.input :reimport, :label => "Re-import?" %>
  <% end %>
  <%= f.buttons do %>
    <%= f.submit "Update" %>
  <% end %>
<% end %>

<%= link_to 'Show', @source %> |
<%= link_to 'Back', sources_path %>
