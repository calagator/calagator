<% tabindex_on '#search_field' %>

<% content_for :discovery_insert do %>
  <link rel="alternate" type="application/x-wiki" title="Edit this page" href="<%= edit_event_url(@event) %>" />
<% end %>

<% content_for :javascript_insert do %>
  <script src="/javascripts/mustache.js" type="text/javascript"></script>
  <script type='text/javascript'>
    $(function() {
      var plan = $('.external.plancast.plan:first');
      if (plan.length > 0) {
        var plan_id = plan.text().split('=')[1];
        $.ajax({
          url: "http://jsonpify.heroku.com",
          dataType: 'jsonp',
          data: {
            resource: "http://api.plancast.com/02/plans/show.json",
            extensions: "attendees",
            plan_id: plan_id
          },
          success: function(data) {
            if (data.attendees.length > 0) {
              $('.attendees').append(Mustache.to_html($('#attendees-template').html(), data));
            }
          }
        });
      }
    })
  </script>
<% end %>

<div class="single_event contentbar">
  <div class="vevent">
    <h1 class="summary"><%= cleanse @event.title.strip_html %></h1>
    <div class='date'><%= normalize_time(@event) -%></div>
      <% unless @event.venue.blank? %>
      <div class="clearfix location vcard<%= " closed" if @event.venue.closed? %>">
      <%= google_map @event %>
          <a class="url" href='<%= url_for venue_url(@event.venue) %>'>
            <span class='fn org'><%= cleanse @event.venue.title.strip_html -%></span>
          </a>
          <% if @event.venue.closed? %><p class='closed_callout'>This venue is no longer open for business.</p><% end %>
          <div class="adr">
          <% if !@event.venue.street_address.blank? -%>
          <div class="street-address"><%= cleanse @event.venue.street_address -%></div>
          <% end %>
          <% if !@event.venue.locality.blank? -%>
            <span class="locality"><%= cleanse @event.venue.locality -%></span>
            <% end -%>
            <% if !@event.venue.region.blank? -%>
            <span class="region"><%= cleanse @event.venue.region -%></span>
            <% end -%>
            <% if !@event.venue.postal_code.blank? -%>
            <span class="postal-code"><%= cleanse @event.venue.postal_code -%></span>
            <% end -%>
            <% if !@event.venue.country.blank? -%>
            <div class='country-name'><%= cleanse @event.venue.country -%></div>
            <% end -%>
            <% if @event.venue && @event.venue.has_full_address? -%>
            (<a href='<%=google_maps_url(@event.venue.full_address) -%>'>map</a>)
            <% end -%>

            <% if @event.venue.wifi? %>
              <div class='wifi_callout'>Public WiFi</div>
            <% end %>


            <% if @event.venue.access_notes.present? %>
              <div class="access_notes">
                <h3>Access Notes</h3>
                <%= h @event.venue.access_notes %>
              </div>
            <% end %>

      </div>
      <% end -%>
  </div>

    <% unless @event.url.blank? -%>
      <h3>Website</h3>
      <div class="website">
        <%= link_to "#{truncate(@event.url, :length => 128)}", h(@event.url), :class => "url", :rel => "nofollow" -%>
      </div>
    <% end -%>
    <% unless @event.description.blank? -%>
    <h3>Description</h3>
    <div class="description">
      <%= format_description(@event.description) %>
    </div>
    <% end -%>

    <div class="attendees">
      <script id="attendees-template" type="text/mustache">
        <h3>Attendees</h3>
        <span class='plancast-rsvp'>(<a href="{{plan_url}}">RSVP on Plancast</a>)</span>
        <br />
        <ul>
          {{#attendees}}
            <li>
              <a href='http://plancast.com/{{username}}'>
                <img class='avatar' src='{{pic_square}}'/>
              </a>
            </li>
          {{/attendees}}
        </ul>
      </script>
    </div>

    <% unless @event.tags.blank? -%>
    <h3>Tags</h3>
    <div class="tags">
        <%= tag_links_for @event %>
    </div>
    <% end %>
  </div>
</div>

<div class='single_view_right sidebar'>
  <h3 class='first'>Export to</h3>
  <ul>
    <li><%= link_to "Google Calendar", google_event_export_link(@event), :id => "google_calendar_export" %></li>
    <li><%= link_to 'iCalendar file', "#{event_url(@event)}.ics" %></li>
    <li>
      <%= link_to_function 'hCalendar markup', '$("#hcal_field").toggle()' %>
      <div id="hcal_field" style="display: none;">
        <%= text_area_tag 'hCalendar', h(@show_hcal), :rows => 10, :cols => 80 %>
      </div>
    </li>
  </ul>
<hr />
  <div id='edit_link'>
    <p>
      You can 
      <%= link_to "edit", edit_event_url(@event) %>,
      <%= link_to "clone", clone_event_url(@event) %>,
      or 
      <%= link_to "delete", event_url(@event), :method => :delete, :confirm => "Are you sure?" %>
      this event.
    </p>
  </div>
<hr />
  <div id='metadata'>
      <%= datestamp(@event) %>
  </div>
</div>
